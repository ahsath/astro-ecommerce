---
import Base from "../layouts/Base.astro";
import Collection from "../components/sections/Collection.astro";
import Arrivals from "../components/sections/Arrivals.astro";
import Seasons from "../components/sections/seasons/Seasons.astro";
import Footer from "../components/Footer.astro";

import Airtable from "airtable";

Airtable.configure({ apiKey: import.meta.env.AIRTABLE_API_KEY });
---

<Base>
<main class="grid gap-16 py-6">
  <Collection />
  <Arrivals />
  <Seasons />
</main>
<Footer class="container p-4" />
</Base>